<div class = "container">
  <h1 id = "title">Films We are Dying to Watch</h1>
  <img id = "pic" src="images/movie.png" alt="m&m characters watching a movie">
  
  <div class = "row">

    <div id = "back" class = "col-md-3" ></div>


    <div id = "back" class = "col-md-3">
        <div  class = "back">
   
            <h2 class = "title">Top Picks</h2>

            <ul>
              {{#each films}}
                {{#unless watched}}
               
                  {{> films/film-block watched=true}}
                {{/unless}}
              {{/each}}
            </ul>
        </div>
    </div>

    <div class = "col-md-3">
        <div class = "back">
              <h2 class = "title" >Movies Watched</h2>

              <ul>
                {{#each films}}
                  {{#if watched}}
                    {{> films/cat-block watched=false}}
                  {{/if}}
                {{/each}}
              </ul>
        </div>
    </div>

<div id = "back" class = "col-md-3" ></div>

    <div class = "col-md-12">
        <div id= "back">
            <h2 class = "title" >Add A Movie to My List</h2>
            <form class="create-form">

              <div class="form-group">
                <label for="fil">Movie Name:</label>
                <input type="text" id="fil" name="name">
              </div>

              <div class="form-group">
                <label for="watch">Watched?</label><br>
                <input type="radio" name="watched" value="1" checked> Watched<br>
                <input type="radio" name="watched" value="0"> Restore
              </div>
             <button type="submit">Add Movie</button>
            </form>
        </div>
    </div>

  </div>
</div>