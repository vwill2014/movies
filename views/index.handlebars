<div class = "back">
    <h1>Films</h1>

    <img id = "pic" src="images/movie.png" alt="m&m characters watching a movie">

    <h2>Films that I Really Want to Watch</h2>

    <ul>
      {{#each films}}
        {{#unless watched}}
       
          {{> films/film-block watched=true}}
        {{/unless}}
      {{/each}}
    </ul>
</div>

<div class = "back">
      <h2>Films I Have Already Watched</h2>

      <ul>
        {{#each films}}
          {{#if watched}}
            {{> films/cat-block watched=false}}
          {{/if}}
        {{/each}}
      </ul>
</div>

<div id= "back">
    <h2>Add A Movie</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="fil">Movie Name:</label>
        <input type="text" id="fil" name="name">
      </div>

      <div class="form-group">
        <label for="watch">Watched?</label><br>
        <input type="radio" name="watched" value="1" checked> Watched<br>
        <input type="radio" name="watched" value="0"> Restore
      </div>
     <button type="submit">Add Movie</button>
    </form>
</div>